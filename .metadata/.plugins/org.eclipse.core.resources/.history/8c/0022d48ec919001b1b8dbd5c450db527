package Bank_Classes;

import Bank.Banking;

public class Recurring_Trn extends Customer implements Banking {
	public Recurring_Trn(int cid, long accnumb, long balance, String name) {
		super(cid, accnumb, balance, name);
	}
	@Override
	public void deposit(double amount) {
		balance += amount;
	}
	@Override
	public double calinterest(double principal) {
		return principal*rint_rate/100;
	}
	@Override
	public void withdraw(double amount) {
		balance -= amount;
	}
}
