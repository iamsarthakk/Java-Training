
public class Emp {
	int eid;
	String ename;
	double esal;
	static int ecount;
	//Emp this;
	
	public Emp() {
		eid = 0;
		ename = " ";
		esal = 0.00;
	}
	
	public Emp(int eid, String ename, double esal) {
		this.eid = eid;
		this.ename = ename;
		this.esal = esal;
		Emp.ecount++;  //Since static variable not belong to a single object but to whole class, 
									//we access them using class name as done here
	}
	
	//Setter Methods
	public void setEid(int eid) {
		this.eid = eid;
	}
	public void setEname(String ename) {
		this.ename = ename;
	}
	public void setEsal(double esal) {
		this.esal = esal;
	}
	
	public static void countdisplay() {
		System.out.println("Count of Object:"+" "+ecount);
	}
	
	//Getter Methods
	public int getEid() {
		return this.eid;
	}
	public String getEname() {
		return this.ename;
	}
	public double getEsal() {
		return this.esal;
	}
	
	//println calls toString method
	@Override
	public String toString() {
		return "Employees values are"+" "+eid+" "+ename+" "+esal;
	}
	
	public void output() {
		System.out.println(ecount);
	}
}
