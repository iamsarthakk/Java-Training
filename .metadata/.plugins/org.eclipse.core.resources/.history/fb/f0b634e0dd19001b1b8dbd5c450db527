package Bank_Main;

import Bank_Classes.Recurring_Trn;
import Bank_Classes.Saving_Trn;
import customer.Customer;

public class Main {

	public static void main(String[] args) {
			Customer c1 = new Customer(101, 20000455, 2000, "Raskovnikov");		
			Saving_Trn S = new Saving_Trn(c1);
			S.Greet();
			S.deposit(100);
			System.out.format("%8s %16s %16s %8s", "ID" ,"AccountNO", "Balance", "Name");
			System.out.format("%8d %16d %16f %8s", c1.getCid() , c1.getAccnumb(), c1.getBalance(), c1.getName());
			System.out.println();
			
			Recurring_Trn R = new Recurring_Trn(c1);
			R.Greet();
			R.deposit(100);
			System.out.format("%8s %16s %16s %8s", "ID" ,"AccountNO", "Balance", "Name");
			System.out.format("%8d %16d %16f %8s", c1.getCid() , c1.getAccnumb(), c1.getBalance(), c1.getName());
			System.out.println();
			
			
	}

}
