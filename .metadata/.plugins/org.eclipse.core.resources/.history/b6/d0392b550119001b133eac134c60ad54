
public class Emp {
	int eid;
	String ename;
	double esal;
	//Emp this;
	
	public Emp() {
		eid = 0;
		ename = " ";
		esal = 0.00;
	}
	
	public Emp(int eid, String ename, double esal) {
		this.eid = eid;
		this.ename = ename;
		this.esal = esal;
	}
	
	//Setter Methods
	public void setEid(int eid) {
		this.eid = eid;
	}
	public void setEname(String ename) {
		this.ename = ename;
	}
	public void setEsal(double esal) {
		this.esal = esal;
	}
	
	
	//Getter Methods
	public int getEid() {
		return this.eid;
	}
	public String getEname() {
		return this.ename;
	}
	public double getEsal() {
		return this.esal;
	}
	
	//println calls toString method
	@Override
	public String toString() {
		return "Employees values are"+" "+eid+" "+ename+" "+esal;
	}
	
	public void input() {
		eid = 101;
		ename = "Sarthak";
		esal = 200000.00;
	}
	public void output() {
		System.out.println(eid+" "+ename+" "+esal);
	}
}
